{
	"package": {
		"dependencies": {
			"@financialforcedev/orizuru": "^9.0.0",
			"@financialforcedev/orizuru-auth": "^5.0.0",
			"@financialforcedev/orizuru-openapi": "^2.0.3",
			"@financialforcedev/orizuru-transport-rabbitmq": "^5.0.0",
			"debug": "4.1.0",
			"jsforce": "1.9.1",
			"lodash": "4.17.11",
			"pkginfo": "0.4.1",
			"uuid": "3.3.2"
		},
		"devDependencies": {
			"@financialforcedev/eslint-config": "^4.0.0",
			"chai": "4.2.0",
			"jsdoc": "3.5.5",
			"mocha": "5.2.0",
			"nyc": "13.1.0",
			"sinon": "7.0.0",
			"sinon-chai": "3.2.0"
		},
		"scripts": {
			"doc": "jsdoc -c config/jsdoc.json",
			"generate-apex-transport": "orizuru setup generate-apex-transport src/node/lib/schema src/apex/force-app/main/default/classes",
			"lint-fix": "eslint src/node --fix",
			"orizuru-post-init": "echo 'No post init steps'",
			"pretest": "eslint src/node",
			"single-test": "nyc --all=false mocha",
			"test": "nyc mocha --recursive src/node/spec"
		},
		"nyc": {
			"check-coverage": true,
			"per-file": true,
			"lines": 100,
			"statements": 100,
			"functions": 100,
			"branches": 100,
			"include": [
				"src/node"
			],
			"reporter": [
				"lcov",
				"html",
				"text",
				"text-summary"
			],
			"cache": true,
			"all": true
		}
	}
}
